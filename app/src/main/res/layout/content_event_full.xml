<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ua.kh.ruschess.kharkivrussianchessclub.Activity.EventFullActivity"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDesc"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageDesc"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/descEvent"
                android:textStyle="bold|italic"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDate"
            android:layout_weight="1"
            android:onClick="onClickDate">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageDate"
                android:src="@drawable/ic_action_clock"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/start_date"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/textView3"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/end_date"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLocation"
            android:layout_weight="1"
            android:onClick="onClickLocation">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageLocation"
                android:src="@drawable/ic_action_location"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/locationEvent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutUser"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageUser"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/contact"
                android:layout_column="3"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutPhone"
            android:layout_weight="1"
            android:onClick="onClickPhone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagePhone"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/phone"
                android:layout_column="3"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutEmail"
            android:layout_weight="1"
            android:onClick="onClickEmail">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageEmail"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/email"
                android:layout_column="3"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutUrl"
            android:layout_weight="1"
            android:onClick="onClickUrl">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageUrl"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_link" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/url"
                android:layout_column="3"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCost"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageCost"
                android:src="@drawable/ic_action_counter"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/cost"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
